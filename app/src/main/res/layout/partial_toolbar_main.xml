<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:background="@color/colorPrimary"
    app:theme="@style/ThemeOverlay.AppCompat.Dark"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <LinearLayout
        android:id="@+id/switcher_layout"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/langLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/lang_en"
            android:textAlignment="textEnd"
            android:textColor="@color/toolbarTextColor"
            android:textSize="22sp" />


        <ImageView
            android:id="@+id/switchBtn"
            android:contentDescription="Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:background="@drawable/selector_switch_button"
            android:src="@drawable/ic_arrow_right"/>

        <TextView
            android:id="@+id/langRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/lang_id"
            android:textAlignment="textStart"
            android:textColor="@color/toolbarTextColor"
            android:textSize="22sp" />

    </LinearLayout>

